<%- include ('partials/header.ejs'); -%>
    <div class="table-wrapper">
        <% if (employees.length > 0) {%>
            <table class="table table-hovered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">First Name</th>
                        <th scope="col">Middle Name</th>
                        <th scope="col">Last Name</th>
                        <th scope="col">DOB</th>
                        <th scope="col">Gender</th>
                        <th scope="col">SSN</th>
                        <th scope="col">Hire Date</th>
                        <th scope="col">Address</th>
                        <th scope="col">Home Phone</th>
                        <th scope="col">Mobile Phone</th>
                        <th scope="col">Email</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% employees.forEach((employee, index) => { %>
                        <tr>
                            <th scope="row"><%= employee.emp_no %></th>
                            <td><%= employee.first_name %></td>
                            <td><%= employee.middle_name %></td>
                            <td><%= employee.last_name %></td>
                            <td><%= new Date(employee.birth_date).toISOString().split('T')[0] %></td>
                            <td><%= employee.gender %></td>
                            <td><%= employee.ssn %></td>
                            <td><%= new Date(employee.hire_date).toISOString().split('T')[0] %></td>
                            <td>
                            <span><%= employee.address1 %></span>
                            <span><%= employee.address2 %></span>
                            <span><%= employee.city %></span>
                            <span><%= employee.state %></span>
                            <span><%= employee.zipcode %></span>
                            </td>
                            <td><%= employee.home_phone %></td>
                            <td><%= employee.mobile_phone %></td>
                            <td><%= employee.email %></td>
                            <td>
                                <a href="/viewSalary/<%= employee.emp_no %>" rel="noopener" class="btn btn-sm btn-success">View Salary History</a>
                                <a href="/ViewTitle/<%= employee.emp_no %>" rel="noopener" class="btn btn-sm btn-success">View Title History</a>
                                <a href="/edit/<%= employee.emp_no %>" rel="noopener" class="btn btn-sm btn-success">Edit</a>
                                <a href="/delete/<%= employee.emp_no %>" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-center">No employees found. Go <a href="/add" >here</a> to add employees.</p>
        <% } %>
    </div>
</div>
</body>
</html>
