<%- include ('partials/header.ejs'); -%>
    <div class="table-wrapper">
        <% if (employees.length > 0) {%>
            <div><h1>List of Employees in Department No : <%= dept_no %></h1><h4>Go <a href="/viewDept" >here</a> to see list of departments again.</h4></div>
            <table class="table table-hovered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">First Name</th>
                        <th scope="col">Middle Name</th>
                        <th scope="col">Last Name</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% employees.forEach((employee, index) => { %>
                        <tr>
                            <th scope="row"><%= employee.emp_no %></th>
                            <td><%= employee.first_name %></td>
                            <td><%= employee.middle_name %></td>
                            <td><%= employee.last_name %></td>
                            <td>
                                <a href="/deleteFromDept/<%= employee.emp_no %>/<%= dept_no %>" class="btn btn-sm btn-danger">Delete From Department</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-center">No employees found. Go <a href="/viewDept" >here</a> to see list of departments.</p>
        <% } %>
    </div>
</div>
</body>
</html>
