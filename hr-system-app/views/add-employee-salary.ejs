<%- include ('partials/header.ejs'); -%>
    <div class="table-wrapper">
        <% if (employees.length > 0) {
            %>
            <table class="table table-hovered">
                <thead class="thead-dark">
                    
                </thead>
                <tbody>
                    <div class="container">
                        <% if (message != '') { %>
                            <p class="text-center text-danger"><%= message %></p>
                        <% } %>
                    <form class="add-form" action="" method="post" >
                        <div class="form-row">
                    <div class="form-group col-md-4">
                        <label for="emp-no">Employee:</label>
                <select class="form-control" name="emp_no" id="emp-no">
                    <% employees.forEach((employee, index) => { %>
                        <option value="<%= employee.emp_no %>"> <%= employee.emp_no+" "+employee.first_name+" "+employee.middle_name+" "+employee.last_name %> </option>
                        </tr>
                    <% }) %>
                </select>
                </div>
                <div class="form-group col-md-4">
                    <label for="salary">Salary:</label>
                    <input type="number" class="form-control" name="salary" id="salary" placeholder="Enter numbers" required>
                </div>
                <button type="submit" class="btn btn-success float-right">Add Employee Salary</button>
        </form>
                    </div>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-center">No details found.</p>
        <% } %>
    </div>
</div>
</body>
</html>
